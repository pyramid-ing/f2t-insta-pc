{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@render/*": [
        "src/render/*"
      ],
      "@main/*": [
        "src/main/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "strict": false,
    "noImplicitAny": false,
    "declaration": false,
    "importHelpers": true,
    "noEmit": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ]
}
